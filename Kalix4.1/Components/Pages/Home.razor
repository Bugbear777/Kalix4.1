@page "/"
@using System.Timers
@using Kalix4.Components.Models
<PageTitle>Home</PageTitle>

<MudCarousel T="FeaturedItem" Items="@Featured" ShowArrows="true" ShowBullets="true" AutoCycle="true" AutoCycleTime="5000">
  <ItemTemplate Context="item">
    <MudPaper Class="d-flex flex-column align-center pa-4" Style="height: 300px;">
      <MudCard Style="max-width: 600px; width: 100%;">
        <MudCardMedia Image="@item.ImageUrl" Style="height: 180px; width: 100%;" />
        <MudCardContent>
          <MudText Typo="Typo.h5">@item.Title</MudText>
          <MudText Typo="Typo.body2">@item.Description</MudText>
        </MudCardContent>
        <MudCardActions>
          <MudButton Variant="Variant.Outlined" Href="@item.LinkUrl">Learn More</MudButton>
        </MudCardActions>
      </MudCard>
    </MudPaper>
  </ItemTemplate>
</MudCarousel>

